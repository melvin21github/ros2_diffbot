<?xml version="1.0" encoding="utf-8"?>
<robot name="diffbot">
    <!-- BASE LINK -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.4 0.3 0.1"/>
                <!-- width depth height-->
            </geometry>
            <origin xyz="0 0 0.05"/>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>

    <!-- LEFT WHEEL-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
            <origin xyz="0 0.15 0.05" rpy="1.5708 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <!-- RIGHT WHEEL-->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
            <origin xyz="0 -0.15 0.05" rpy="1.5708 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <!-- CASTER WHEEL-->
    <link name="caster">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <origin xyz="-0.15 0 0.03" />
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>

    <!-- JOINTS-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"></child>
        <origin xyz="0 0.15 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0"></axis>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"></child>
        <origin xyz="0 -0.15 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0"></axis>
    </joint>

    <joint name="caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster"/>
        <origin xyz="-0.15 0 0.03" />
    </joint>
</robot>